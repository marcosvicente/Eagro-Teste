<div class="row">
  <div class="col m6 offset-m3">
    <p id="notice"><%= notice %></p>

    <table class="striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Projeto</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.name %></td>
            <td><%= task.description %></td>
            <td><%= task.project.name %></td>
            <td><%= link_to 'Ver', task %></td>
            <td><%= link_to 'Editar', edit_task_path(task) %></td>
            <td><%= link_to 'Apagar', task, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="divider"></div>
    <br>

    <%= link_to 'Nova tarefa', new_task_path, class: "waves-effect waves-light btn teal accent-4" %>

  </div>
</div>
